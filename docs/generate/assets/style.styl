@import 'reset.css'

header-color = #000
text-color = #333
link-color = #1486b3

// GLOBAL
option
    display: none

body
    font-family: Arial, sans-serif
    font-size: 14px
    color: text-color
    line-height: 125%

h1
    font-size: 25px
    margin: 40px 0 20px
    color: header-color 
h2
    font-size: 20px
    margin: 30px 0 20px
    color: header-color
h3
    font-size: 17px
    margin: 20px 0
    color: header-color

h4, h5
    font-weight: bold

h5
    font-style: italic

p
    margin: 20px 0

img
    max-width: 100%

.pull-left
    float: left
.pull-right
    float: right

strong, .bold
    font-weight: bold
i, em, .italic
    font-style: italic
u, .underline
    text-decoration: underline

.page-break
    page-break-before: always

.clearfix:after
    content: ""
    display: table
    clear: both

// HEADER / FOOTER
header, footer
    display: block
    height: 60px
    // background-color: red
    & > table
        position: absolute
        bottom: 0

// COVER
cover
    display: block
    height: 100%
    h1
        margin: 0
        font-size: 50px
        padding: 100px 0
    h2
        margin: 40px 0
        font-size: 30px
        color: text-color
    h3
        font-size: 14px
    h1, h2, h3
        text-align: right
    .footer
        position: absolute
        bottom: 0
        p
            span
                display: inline-block
                width: 100px
            &:last-child
                margin-bottom: 0

// PREPEND
chapter.prepend
    h2
        margin-top: 60px
    table.signature
        height: 150px
        td
            position: relative
        span.comment
            position: absolute
            bottom: 10px
            right: 10px
            font-size: 12px

// INDEX
index
    display: block
    page-break-before: always
    h1
        padding: 20px 0 40px
    li
        span.page-title
            display: inline-block
            padding-bottom: 6px
        span.page-number
            float: right
        &.first
            padding-bottom: 18px
            > span.page-title,
            > span.page-number
                font-weight: bold

// CHAPTER
chapter
    display: block
    page-break-before: always

// TABLE
chapter table
    display: table
    width: 100%
    max-width: 100%
    margin: 20px 0
    border-spacing: 0
    border: 1px solid #ddd !important
    th
        text-align: left
        font-weight: bold
    thead th
        vertical-align: bottom
        border-bottom: 1px solid #ddd !important
    th, td
        padding: 8px !important
        vertical-align: top
    td
        border-top: 1px solid #ddd !important
    tbody tr:nth-child(odd)
        background-color: #f9f9f9

    tbody
        td:nth-child(1):nth-last-child(2)
            width: 33%
    
// LINK
chapter a
    &, &:link, &:active
        text-decoration: none
        color: link-color
    &:hover, &:visited
        text-decoration: none
        color: darken(link-color, 15%)

// LIST
chapter ul
    margin: 20px 0 20px 25px
    list-style: disc
    li
        padding-bottom: 10px

// MISCELLANEOUS
chapter
    > h1
        padding: 80px 0 20px

